{
    "name": "3dgoo/silverstripe-hcaptcha",
    "description": "A spam protector and form field using hCaptcha for Silverstripe",
    "type": "silverstripe-vendormodule",
    "keywords": ["silverstripe", "hcaptcha", "spamprotection"],
    "license": "MIT",
    "authors": [
        {
            "name": "3dgoo",
            "email": "michael@3dgoo.com",
            "homepage": "https://www.3dgoo.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": ">=7",
        "silverstripe/framework": "^6",
        "silverstripe/spamprotection": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "X3dgoo\\silverstripe-hcaptcha\\": "src/"
        }
    },
    "support": {
        "issues": "https://github.com/3dgoo/silverstripe-hcaptcha/issues"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs src/ tests/",
        "lint-clean": "vendor/bin/phpcbf src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
